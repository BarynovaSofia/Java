<configuration>

    <!-- Аппендер для вывода логов в консоль -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Формат логов: время, поток, уровень, логгер, сообщение -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %class - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Аппендер для записи логов в файл -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/logback.log</file> <!-- путь к файлу -->
        <append>true</append> <!-- дозаписывать, не перезаписывать -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %class - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Корневой логгер -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>